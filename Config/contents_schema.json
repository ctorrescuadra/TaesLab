{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/Contents",
    "definitions": {
        "Contents": {
            "properties": {
                "Base": {
                    "$ref": "#/definitions/Content"
                },
                "Functions": {
                    "$ref": "#/definitions/Content"
                },
                "Classes": {
                    "$ref": "#/definitions/Content"
                },
                "Model": {
                    "$ref": "#/definitions/Content"
                }
            },
            "required": [
                "Base",
                "Functions",
                "Classes",
                "Model"
            ],
            "title": "Contents",
            "description": "Types of TaesLab documentation content"
        },
        "Content": {
            "type": "object",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "required": [
                    "Name",
                    "Description",
                    "Groups"
                ],
                "properties": {
                    "Name": {
                        "ref": "#/definitions/Text"
                    },
                    "Description": {
                        "ref": "#/definitions/Text"
                    },
                    "Groups": {
                        "ref": "#/definitions/Folder"
                    }
                }
            },
            "title": "Content",
            "description": "Documentation content type (Base, Functions, Classes, Model)"
        },
        "Folder": {
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "required": [
                    "Name",
                    "Description",
                    "Files"
                ],
                "properties": {
                    "Name": {
                        "$ref": "#/definitions/Text"
                    },
                    "Description": {
                        "$ref": "#/definitions/Text"
                    },
                    "Files": {
                        "type": "array",
                        "uniqueItems": true,
                        "minItems": 1,
                        "items": {
                            "required": [
                                "Name",
                                "Description"
                            ],
                            "properties": {
                                "Name": {
                                    "$ref": "#/definitions/Text"
                                },
                                "Description": {
                                    "$ref": "#/definitions/Text"
                                }
                            }
                        }
                    }
                }
            },
            "title": "Folder",
            "description": "Folder containing documentation files"
        },
        "Text": {
            "type": "string",
            "minLength": 2
        }
    }
}